<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OtherTextStyle">
        <item name="android:textSize">@dimen/other_text_size</item>
    </style>

    <style name="ButtonStyle" parent="TitleStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:text">@string/text_play_all</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
